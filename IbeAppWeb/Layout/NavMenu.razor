@using Microsoft.FluentUI.AspNetCore.Components
@using Microsoft.FluentUI.AspNetCore.Components.Icons

<div class="top-row ps-3 navbar navbar-dark">



<FluentStack Orientation="Microsoft.FluentUI.AspNetCore.Components.Orientation.Horizontal" Width="100%">
    <div>
        <FluentNavMenu @bind-Expanded="@Expanded" Width="200" Collapsible="true" CollapsedChildNavigation="@EnableCollapsedChildNavigation" Title="Collapsible demo">
                <FluentNavGroup Title="Arbeitsberichte" Tooltip="Zu den Arbeitsberichten" Icon="@(new Icons.Regular.Size24.EarthLeaf())" Class="fluent-navlink">
                    <FluentNavLink Icon="@(new Icons.Regular.Size24.LeafOne())" Href="/arbeitsscheine" Tooltip="Zum allgemeinen Arbeitsbericht" Class="fluent-navlink">Arbeitsbericht alle</FluentNavLink>
                    <FluentNavLink Icon="@(new Icons.Regular.Size24.LeafTwo())" Href="/arbeitsberichtmonteur" Tooltip="Arbeitsbericht für Monteure" Class="fluent-navlink">Arbeitsbericht Monteur</FluentNavLink>
                    <FluentNavLink Icon="@(new Icons.Regular.Size24.LeafThree())" Href="/arbeitsberichtanlage" Tooltip="Arbeitsbericht für Anlagen" Class="fluent-navlink">Arbeitsbericht Anlage</FluentNavLink>
            </FluentNavGroup>
                <FluentNavGroup Title="Umsatz" Tooltip="Item 5 tooltip" Class="fluent-navlink">
                    <FluentNavLink Icon="@(new Icons.Regular.Size24.LeafOne())" Href="/umsatz" Tooltip="Zum Umsatz" Class="fluent-navlink">Umsatz</FluentNavLink>
            </FluentNavGroup>
                <FluentNavGroup Title="Projekte" Tooltip="Item 5 tooltip" Class="fluent-navlink">
                    <FluentNavLink Icon="@(new Icons.Regular.Size24.LeafOne())" Href="/project-anlage" Tooltip="Projekt Anlage Management" Class="fluent-navlink">Projekt Anlage</FluentNavLink>
                </FluentNavGroup>
        </FluentNavMenu>
    </div>

</FluentStack>
</div>

@code {

    bool Expanded = true;
    bool EnableCollapsedChildNavigation = true;
}